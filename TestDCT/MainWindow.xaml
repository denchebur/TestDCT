<Window x:Class="TestDCT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestDCT"
        mc:Ignorable="d"
        Title="MainWindow" Height="526" Width="824">
    <Canvas>
        <TabControl x:Name="tabControl" Height="510" Width="824" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TabItem Header="Main Page">
                <Frame x:Name="frame1" Source="MainPage.xaml" Margin="0,0,0,-1"/>
            </TabItem>
            <TabItem Header="Info">
                <Frame x:Name="frame2" Source="DetailInfoPage.xaml" Margin="0,0,0,1"/>
            </TabItem>
            <TabItem Header="Converter">
                <Frame x:Name="frame3" Source="ConverterPage.xaml" Margin="0,0,0,1"/>
            </TabItem>
        </TabControl>
    </Canvas>

</Window>
